@model IEnumerable<TouristAgency.Models.ApplicationUser>
@{
    ViewData["Title"] = "Управление на агенции";
}

<h2>Управление на туристически агенции</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Име</th>
            <th>Имейл</th>
            <th>Статус</th>
            <th>Действие</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.UserName</td>
                <td>@user.Email</td>
                <td>
                    @if (user.IsApproved)
                    {
                        <span class="text-success">Одобрен</span>
                    }
                    else
                    {
                        <span class="text-danger">Изчаква</span>
                    }
                </td>
                <td>
                    @if (!user.IsApproved)
                    {
                        <form asp-action="Approve" method="post">
                            <input type="hidden" name="userId" value="@user.Id" />
                            <button type="submit" class="btn btn-success btn-sm">Одобри</button>
                        </form>
                    }
                    else
                    {
                        <form asp-action="Revoke" method="post">
                            <input type="hidden" name="userId" value="@user.Id" />
                            <button type="submit" class="btn btn-warning btn-sm">Отнеми достъп</button>
                        </form>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
