@model TouristAgency.Models.TravelPackage
@{
    ViewData["Title"] = "Изтриване на пакет";
}

<h2>Сигурни ли сте, че искате да изтриете този пакет?</h2>

<div class="border p-3 mb-3">
    <dl class="row">
        <dt class="col-sm-3">Заглавие</dt>
        <dd class="col-sm-9">@Model.Title</dd>
        <dt class="col-sm-3">Дестинация</dt>
        <dd class="col-sm-9">@Model.Destination?.Name</dd>
        <dt class="col-sm-3">Цена</dt>
        <dd class="col-sm-9">@Model.Price лв.</dd>
        <dt class="col-sm-3">От</dt>
        <dd class="col-sm-9">@Model.StartDate.ToShortDateString()</dd>
        <dt class="col-sm-3">До</dt>
        <dd class="col-sm-9">@Model.EndDate.ToShortDateString()</dd>
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Изтрий</button>
        <a asp-action="MyPackages" class="btn btn-secondary">Отказ</a>
    </form>
</div>
