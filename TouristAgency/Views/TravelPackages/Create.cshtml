@model TouristAgency.Models.TravelPackage

@{
    ViewData["Title"] = "Създаване на туристически пакет";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Create" method="post" enctype="multipart/form-data">
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="Title"></label>
        <input asp-for="Title" class="form-control" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Description"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Price"></label>
        <input asp-for="Price" class="form-control" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="AvailableSlots"></label>
        <input asp-for="AvailableSlots" class="form-control" />
        <span asp-validation-for="AvailableSlots" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="StartDate"></label>
        <input asp-for="StartDate" type="date" class="form-control" min="@DateTime.Today.ToString("yyyy-MM-dd")" />
        <span asp-validation-for="StartDate" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="EndDate"></label>
        <input asp-for="EndDate" type="date" class="form-control" min="@DateTime.Today.ToString("yyyy-MM-dd")" />
        <span asp-validation-for="EndDate" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="DestinationId">Дестинация</label>
        <select asp-for="DestinationId" asp-items="ViewBag.Destinations" class="form-control">
            <option value="">-- Избери дестинация --</option>
        </select>
        <span asp-validation-for="DestinationId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ImageFiles">Качи снимки</label>
        <input asp-for="ImageFiles" type="file" multiple class="form-control" />
        <span asp-validation-for="ImageFiles" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary mt-3">Запази</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        const startInput = document.getElementById("StartDate");
        const endInput = document.getElementById("EndDate");

        function validateDates() {
            const startDate = new Date(startInput.value);
            const endDate = new Date(endInput.value);
            if (endDate < startDate) {
                endInput.setCustomValidity("Крайната дата не може да е преди началната.");
            } else {
                endInput.setCustomValidity("");
            }
        }

        startInput.addEventListener("change", validateDates);
        endInput.addEventListener("change", validateDates);
    </script>

}