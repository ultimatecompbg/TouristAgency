@model IEnumerable<TouristAgency.Models.TravelPackage>
@{
    ViewData["Title"] = "Моите пакети";
}

<h2>Моите туристически пакети</h2>
<a asp-action="Create" class="btn btn-success mb-3">+ Създай нов пакет</a>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Заглавие</th>
            <th>Дестинация</th>
            <th>Цена</th>
            <th>От</th>
            <th>До</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Title</td>
                <td>@item.Destination?.Name</td>
                <td>@item.Price лв.</td>
                <td>@item.StartDate.ToShortDateString()</td>
                <td>@item.EndDate.ToShortDateString()</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Редактирай</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Изтрий</a>
                </td>
            </tr>
        }
    </tbody>
</table>

