@model TouristAgency.Models.Booking

@{
    ViewData["Title"] = "Детайли за резервация";
}

<h2>Детайли за резервация</h2>

<p><strong>Пакет:</strong> @Model.TravelPackage?.Title</p>
<p><strong>Дестинация:</strong> @Model.TravelPackage?.Destination?.Name</p>
<p><strong>Организатор:</strong> @Model.TravelPackage?.TourOperator?.UserName</p>
<p><strong>Обща цена:</strong> @Model.TotalPrice.ToString("C")</p>
<p><strong>Места:</strong> @Model.NumberOfSlots</p>
<p><strong>Статус:</strong> @Model.Status</p>
<p><strong>Дата:</strong> @Model.CreatedOn.ToShortDateString()</p>

@if (Model.Passengers != null && Model.Passengers.Any())
{
    <h4>Имена на пътници:</h4>
    <ul>
        @foreach (var passenger in Model.Passengers)
        {
            <li>@passenger.FullName</li>
        }
    </ul>
}
else
{
    <p class="text-muted">Няма записани пътници.</p>
}

<a asp-action="MyBookings" class="btn btn-secondary">Назад</a>
